{
  "mcpServers": {
    "chakra-ui": {
      "command": "npx",
      "args": [
        "-y",
        "@chakra-ui/react-mcp"
      ],
      "alwaysAllow": [
        "get_component_example"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "DEFAULT_MINIMUM_TOKENS": ""
      }
    }
  }
}